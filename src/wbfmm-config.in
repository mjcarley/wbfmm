#!/bin/sh
# @configure_input@

blas_libs="@blas_libs@"
wbfmm_cppflags="@CPPFLAGS@"
openmp_cflags="@OPENMP_CFLAGS@"

prefix=@prefix@
exec_prefix=@exec_prefix@
includedir=@includedir@

single_precision=no

usage()
{
	cat <<EOF
Usage: wbfmm-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
	[--check]
	[--single-precision]
Libraries:
	wbfmm
EOF
	exit $1
}

uniquify()
{
    echo $1 | awk '{
	for (i = 1; i <= NF; i++) {
	    unique = 1;
	    for (j = i + 1; j <= NF && unique; j++)
		if ($i == $j)
		    unique = 0;
            if (unique)
		printf ("%s ", $i);
	}
    }'
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @WBFMM_VERSION@
      exit 0
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    --single-precision)
      single_precision=yes
      ;;
    --check)
      echo_check=yes
      ;;
    wbfmm)
      lib_wbfmm=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi
if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi
if test "$echo_cflags" = "yes"; then
    wbfmm_cflags="$openmp_cflags -I${prefix}/include"
    wbfmm_cflags=`uniquify "$wbfmm_cflags"`
    echo $wbfmm_cppflags $wbfmm_cflags
fi
if test "$echo_libs" = "yes"; then
    wbfmm_libs="-L${exec_prefix}/lib -lwbfmm @LIBS@ -lm $wbfmm_libs"
    wbfmm_libs=`uniquify "$wbfmm_libs"`
    echo ${wbfmm_libs}
fi
