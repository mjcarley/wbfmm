#include <math.h>
#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>
#include <string.h>

#include <glib.h>

#include <wbfmm.h>

#define BUFSIZE 131072

GTimer *timer ;
gchar *progname ;

gint read_points(gchar *file,
		 WBFMM_REAL **xs, gint *xstr,
		 WBFMM_REAL **q,  gint *qstr, gint *nq,
		 WBFMM_REAL **n,  gint *nstr, 
		 WBFMM_REAL **f,  gint *fstr,
		 gint *nsrc) ;

gint read_points(gchar *file,
		 WBFMM_REAL **xs, gint *xstr,
		 WBFMM_REAL **q,  gint *qstr, gint *nq,
		 WBFMM_REAL **n,  gint *nstr, 
		 WBFMM_REAL **f,  gint *fstr,
		 gint *nsrc)

{
  FILE *input = stdin ;
  WBFMM_REAL *s ;
  gchar code[8] ;
  gint i, j, nqt ;

  if ( file != NULL ) {
    input = fopen(file, "r") ;
    if ( input == NULL ) {
      fprintf(stderr, "%s: cannot open file %s\n", progname, file) ;
      exit(1) ;
    }
  }


  fscanf(input, "%d", nsrc) ;
  fscanf(input, "%d", &nqt) ;
  fscanf(input, "%s", code) ;
  fprintf(stderr, "%s: %d point%c of %d components\n", 
	  progname, *nsrc, (*nsrc > 1 ? 's' : ' '), nqt) ;
  if ( strcmp(code, "M") == 0) {
    *xs = *q = *n = *f = NULL ;

    *nq = nqt ;
    *xstr = 3 + *nq ;
    s = *xs = (WBFMM_REAL *)g_malloc0((*xstr)*(*nsrc)*sizeof(WBFMM_REAL)) ;

    for ( i = 0 ; i < *nsrc ; i ++ ) {
      for ( j = 0 ; j < *xstr ; j ++ )
	fscanf(input, "%FLOATFMT", &(s[(*xstr)*i+j])) ;
    }

    *q = &(s[3]) ; *qstr = *xstr ;
    
    if ( file != NULL ) fclose(input) ;

    return 0 ;
  }

  if ( strcmp(code, "F") == 0) {
    *xstr = 3 ;
    s = *xs = (WBFMM_REAL *)g_malloc0((*xstr)*(*nsrc)*sizeof(WBFMM_REAL)) ;

    for ( i = 0 ; i < *nsrc ; i ++ ) {
      for ( j = 0 ; j < *xstr ; j ++ )
	fscanf(input, "%FLOATFMT", &(s[(*xstr)*i+j])) ;
    }

    if ( file != NULL ) fclose(input) ;

    return 0 ;
  }

  g_assert_not_reached() ;
  
  return 0 ;
}

gint main(gint argc, gchar **argv)

{
  WBFMM_REAL *xs ;
  WBFMM_REAL *xf, *f, *q, *normals, *dipoles ;
  gint nsrc, i, j, xstr, strf, nf, qstr, nq, nstr, dstr ;
  gchar ch, *sfile = NULL, *ffile = NULL ;

  progname = g_strdup(g_path_get_basename(argv[0])) ;
  timer = g_timer_new() ;

  nq = 1 ;
  while ( (ch = getopt(argc, argv, "hf:k:s:")) != EOF ) {
    switch ( ch ) {
    default:
    case 'h':
      fprintf(stderr,
	      "Usage: %s <options> > <output file>\n\n"
	      "Compute field generated by list of sources at specified "
	      "field points using\n"
	      "direct evaluation method\n"
	      "Options:\n\n"
	      "  -f (field point name)\n"
	      "  -s (source file name)\n",
	      progname) ;
      return 0 ;
      break ;
    case 'f': ffile = g_strdup(optarg) ; break ;      
    case 's': sfile = g_strdup(optarg) ; break ;
    }
  }

  if ( sfile != NULL ) {
    read_points(sfile,
		&xs, &xstr,
		&q,  &qstr, &nq,
		&normals, &nstr,
		&dipoles, &dstr,
		&nsrc) ;
  } else {
    fprintf(stderr, "%s: source list must be specified (-s)\n",
	    progname) ;
    return 1 ;
  }

  if ( ffile != NULL ) {
    read_points(ffile,
		&xf, &strf, NULL, NULL, NULL, NULL, NULL, NULL, NULL, &nf) ;
  } else {
    fprintf(stderr, "%s: field point list must be specified (-f)\n",
	    progname) ;
    return 1 ;
  }

  fprintf(stderr, "%s: computing direct field; %lg\n",
	  progname, g_timer_elapsed(timer, NULL)) ;

  f = (WBFMM_REAL *)g_malloc0(nf*nq*sizeof(WBFMM_REAL)) ;

  for ( i = 0 ; i < nf ; i ++ ) {
    wbfmm_laplace_field_PREC(xs, xstr, q, qstr, nq, NULL, 0, NULL, 0,
			     nsrc, &(xf[i*strf]), &(f[nq*i])) ;
  }
  
  fprintf(stderr, "%s: direct field computed; %lg\n",
	  progname, g_timer_elapsed(timer, NULL)) ;

  for ( i = 0 ; i < nf ; i ++ ) {
    fprintf(stdout,
    	    "%FLOATEXP %FLOATEXP %FLOATEXP",
    	    xf[i*strf+0], xf[i*strf+1], xf[i*strf+2]) ;
    for ( j = 0 ; j < nq ; j ++ ) {
      fprintf(stdout, " %FLOATEXP", f[nq*i+j]) ;
    }
    fprintf(stdout, "\n") ;
  }

  return 0 ;
}
